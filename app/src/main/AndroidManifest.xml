<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.openglesdemo1">

    <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture" />
    <supports-gl-texture android:name="GL_OES_compressed_paletted_texture" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OpenglesDemo1">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.t1.TriangleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.t2.ColorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.t3.RectangleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.t4.VertexBufferActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.t5.VertexArrayActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.t6.SquareActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.t7.SquareActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.t8.TextureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.t9.SurfaceCameraActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.t10.TextureCameraActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.t11.Camera2Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.t12.RecordByCamera2Activity"
            android:screenOrientation="portrait" />
    </application>

</manifest>