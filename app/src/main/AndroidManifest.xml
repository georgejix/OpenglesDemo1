<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.openglesdemo1">

    <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture" />
    <supports-gl-texture android:name="GL_OES_compressed_paletted_texture" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OpenglesDemo1">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.t1.TriangleActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".ui.t2.ColorActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".ui.t3.RectangleActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".ui.t4.VertexBufferActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".ui.t5.VertexArrayActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".ui.t6.SquareActivity"
            android:screenOrientation="fullSensor" />
    </application>

</manifest>